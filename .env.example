# AuditEng Backend Environment Variables
# Copy to .env and fill in your values

# Database (PostgreSQL) - Required
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/auditeng

# Redis - Required for background jobs
REDIS_URL=redis://host:6379/0

# Anthropic API Key - Required for AI extraction
ANTHROPIC_API_KEY=sk-ant-...

# JWT Secret - Required (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-here

# Frontend URL - Required for CORS in production
FRONTEND_URL=https://your-frontend.up.railway.app

# Optional settings
DEBUG=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=10
